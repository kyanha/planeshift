<widget_description>
<widget name="eedit" factory="pawsEEdit" 
        visible="yes" savepositions="no" movable="no" 
        resizable="no" >
    
    <!-- window background -->
    <bgimage resource="Shaded" alpha="0" fade="no" />

    <!-- size of window and title -->
    <frame x="0" y="0" width="800" height="600" border="no" />
    <title resource="TitleBar" text="Planeshift Effect Editor" align="left" />
    
    <!-- preview window -->
    <widget name="preview" factory="pawsGenericView">
        <frame x="5" y="5" width="790" height="560" border="no" />
        <map file="/planeshift/world/npcroom1" sector="NPCroom" />
    </widget>

    <!-- toolbox show/hide buttons -->
    <widget name="show_shortcuts" factory="pawsButton" id="110">
        <frame x="5" y="570" width="100" height="25" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="7"  sr="0" sg="0" sb="0" shadow="yes" />   
        <buttonup resource="ButtonUp"/>
        <buttondown resource="ButtonDown" />
        <label text="Show Shortcuts"/>
    </widget>
    <widget name="ShowTarget" factory="pawsButton" id="102">
        <frame x="110" y="570" width="100" height="25" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="7"  sr="0" sg="0" sb="0" shadow="yes" />   
        <buttonup resource="ButtonUp"/>
        <buttondown resource="ButtonDown" />
        <label text="Hide Target"/>
    </widget>
    <widget name="ShowCamera" factory="pawsButton" id="103">
        <frame x="215" y="570" width="100" height="25" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="7"  sr="0" sg="0" sb="0" shadow="yes" />   
        <buttonup resource="ButtonUp"/>
        <buttondown resource="ButtonDown" />
        <label text="Hide Camera"/>
    </widget>
    <widget name="ShowRender" factory="pawsButton" id="104">
        <frame x="320" y="570" width="100" height="25" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="7"  sr="0" sg="0" sb="0" shadow="yes" />   
        <buttonup resource="ButtonUp"/>
        <buttondown resource="ButtonDown" />
        <label text="Hide Render"/>
    </widget>
    <widget name="ShowLoadEffect" factory="pawsButton" id="105">
        <frame x="425" y="570" width="100" height="25" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="7"  sr="0" sg="0" sb="0" shadow="yes" />   
        <buttonup resource="ButtonUp"/>
        <buttondown resource="ButtonDown" />
        <label text="Hide LoadEffect"/>
    </widget>
    <widget name="ShowEffectTree" factory="pawsButton" id="106">
        <frame x="530" y="570" width="100" height="25" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="7"  sr="0" sg="0" sb="0" shadow="yes" />   
        <buttonup resource="ButtonUp"/>
        <buttondown resource="ButtonDown" />
        <label text="Hide Effect Tree"/>
    </widget>


    <widget name="Exit" factory="pawsButton" id="0">
        <frame x="715" y="570" width="80" height="25" border="no" />
        <font name="/planeshift/data/ttf/LiberationSans-Regular.ttf" r="255" g="255" b="255" size="7"  sr="0" sg="0" sb="0" shadow="yes" />   
        <buttonup resource="ButtonUp"/>
        <buttondown resource="ButtonDown" />
        <label text="Exit"/>
    </widget>
</widget>
</widget_description>

